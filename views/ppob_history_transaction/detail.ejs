<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard Ecommerce</title>
    <%- include ../partials/script.ejs %>
  </head>
  <body>
    <div class="container">
      <div class="section">
        <h4>Dashboard PPOB</h4>
        <p>History Transaction with invoice ID <strong><%= ht.invoice %></strong></p>
      </div>
      <div class="divider"></div>
      <div class="section">
        <h5>Information User and Transaction</h5>
        <div class="divider"></div>
        <p> Name: <%= ht.user.getFullname() %> </p>
        <p> Email: <%= ht.user.email %> </p>
        <p> Status: <%= ht.status %> </p>
        <p> Category: <%= ht.category %> </p>
        <p> Number: <strong><%= ht.number %> </strong></p>
        <p> Payment Method: <%= ht.payment_method %> </p>
        <p> Total Price: <%= ht.convertToRupiah() %> </p>
      </div>
      <div class="section">
        <div class="divider"></div>
          <h5>Raw Data</h5>
          <p><%= JSON.stringify(ht.detail_transaction) %></p>
      </div>
      <div class="section">
        <div class="divider"></div>
        <h5>Actions</h5>
        <div class="row">
          <div class="col s6">
            <a href="/ppob-history-transaction" class="btn waves-effect waves-light" type="submit" name="action">Back</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>